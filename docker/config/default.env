# Fusion Scanner - Pre-configured Docker Environment
# =================================================

# Application Settings
NODE_ENV=production
PORT=8080
APP_NAME="Fusion Scanner"
APP_VERSION=2.0

# Database Configuration
DATABASE_PATH=/app/data/scanner.db
DATABASE_URL=sqlite:/app/data/scanner.db

# Security Scanner Settings
NUCLEI_TEMPLATES_PATH=/app/nuclei-templates
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=300000
DEFAULT_SCAN_TOOLS=["nuclei","basic"]
ALLOWED_SCAN_TARGETS=["https://httpbin.org","https://demo.testfire.net","https://juice-shop.herokuapp.com"]

# Security Settings
CORS_ORIGIN=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
SSL_ENABLED=false
HELMET_ENABLED=true

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_PING_INTERVAL=30000
WEBSOCKET_PING_TIMEOUT=5000

# AI Analysis (disabled by default)
AI_ANALYSIS_ENABLED=false
AI_PROVIDER=openai
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000

# Logging Configuration
LOGS_PATH=/app/logs
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Feature Flags
DEMO_MODE=true
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
SWAGGER_ENABLED=true

# Performance Settings
MEMORY_LIMIT=2gb
CPU_LIMIT=2
WORKER_PROCESSES=auto
CLUSTER_MODE=false

# Cache Settings (if Redis is enabled)
REDIS_ENABLED=false
REDIS_URL=redis://redis:6379
REDIS_TTL=3600
CACHE_SCAN_RESULTS=true

# External Services
WEBHOOK_ENABLED=false
NOTIFICATION_ENABLED=false

# Development Settings
DEBUG=false
VERBOSE_LOGGING=false
PROFILING_ENABLED=false
