# Production Environment Configuration
NODE_ENV=production
PORT=8080

# Database Configuration
DATABASE_URL=/app/data/production.db

# Nuclei Configuration
NUCLEI_PATH=/usr/local/bin/nuclei
NUCLEI_TEMPLATES_PATH=/app/nuclei-templates
NUCLEI_TIMEOUT=600
NUCLEI_RATE_LIMIT=100
NUCLEI_MAX_CONCURRENT=15

# AI Configuration (Configure for production)
OPENAI_API_KEY=your_production_openai_api_key_here
AI_MODEL=gpt-4
AI_ENABLED=true

# Security Configuration
MAX_SCAN_DURATION=7200
MAX_CONCURRENT_SCANS=3
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=50

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/production.log

# WebSocket Configuration
WS_ENABLED=true

# Frontend URL for CORS (set your domain)
FRONTEND_URL=https://yourdomain.com
