# Fusion Scanner - Docker Environment Configuration
# ================================================
# Copy this file to .env and modify as needed

# Application Settings
NODE_ENV=production
PORT=8080
APP_NAME=Fusion Scanner
APP_VERSION=2.0

# Database Configuration
DATABASE_PATH=/app/data/scanner.db
DATABASE_URL=sqlite:/app/data/scanner.db

# Scanner Configuration
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=300000
NUCLEI_TEMPLATES_PATH=/app/nuclei-templates
DEMO_MODE=true

# Security Settings
CORS_ORIGIN=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Feature Flags
WEBSOCKET_ENABLED=true
AI_ANALYSIS_ENABLED=false
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Logging
LOGS_PATH=/app/logs
LOG_LEVEL=info

# External Services (optional)
REDIS_ENABLED=false
REDIS_URL=redis://redis:6379

# PostgreSQL (if using database profile)
POSTGRES_DB=scanner
POSTGRES_USER=scanner
POSTGRES_PASSWORD=scanner_password

# AI Configuration (if enabled)
# AI_PROVIDER=openai
# OPENAI_API_KEY=your_openai_api_key
# AI_MODEL=gpt-3.5-turbo

# Notification Settings (optional)
# WEBHOOK_URL=https://your-webhook-url.com
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Production Settings (for prod deployment)
# SSL_ENABLED=true
# DOMAIN=yourdomain.com
# LETSENCRYPT_EMAIL=admin@yourdomain.com
